<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#B9A4A4"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailSetiapBuku.DetailTheFault16">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_photo"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="true"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3F3636"
                android:src="@drawable/sample_15"
                android:contentDescription="@string/imege_view" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="The Fault in our Stars"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/cv_photo" />

        <TextView
            android:id="@+id/tv_penerbit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Mizan PBU"
            android:textColor="#3F51B5"
            android:textSize="15sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/name" />


        <TextView
            android:id="@+id/tv_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:text="Kisah seorang remaja wanita bernama Hazel Grace. Dia merupakan seorang yang bertahan dari serangan kanker yang membuat paru-parunya tidak dapat berjalan normal. Orang tuanya menyarankan agar Hazel bisa pergi ke Support Group. \n \n The Fault in Our Stars adalah novel keenam yang dikarang oleh penulis Amerika Serikat John Green"
            android:textAlignment="center"
            android:textSize="15sp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_penerbit"/>


        <TextView
            android:id="@+id/hargaawal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="Rp.65.000"
            android:textColor="#000109"
            android:textSize="15sp"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_description" />


        <TextView
            android:id="@+id/diskon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DISKON 20%"
            android:textColor="#3F51B5"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:textSize="15sp"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/hargaawal" />

        <TextView
            android:id="@+id/hargakhir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp.52.000 "
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:textColor="#F44336"
            android:textSize="18sp"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/diskon" />


        <Button
            android:id="@+id/fault"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#000000"
            android:text="BELI"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/hargakhir"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>